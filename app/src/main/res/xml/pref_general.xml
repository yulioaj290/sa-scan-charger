<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_show_introduction"
        android:summary="@string/pref_desc_show_introduction"
        android:title="@string/pref_title_show_introduction" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_list_error_margin"
        android:entryValues="@array/pref_values_error_margin"
        android:key="pref_error_margin"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_error_margin" />

    <ListPreference
        android:entries="@array/pref_list_delay_autofocus"
        android:entryValues="@array/pref_values_delay_autofocus"
        android:key="pref_delay_autofocus"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_delay_autofocus" />

</PreferenceScreen>
